<Page x:Class="CMTool.Views.Settings.MoreSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CMTool.Views.Settings"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance local:MoreSettings,IsDesignTimeCreatable=False}"
      Title="MoreSettings">

    <StackPanel Margin="12">
        <ui:CardControl Icon="{ui:SymbolIcon Dismiss16}"
                        Header="关闭程序"
                        Margin="0,4,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ui:Button Content="确定" 
                           Command="{Binding ViewModel.CloseCommand}"
                           />
            </Grid>
        </ui:CardControl>
    </StackPanel>
</Page>
